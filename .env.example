# Server Configuration
PORT=3000
NODE_ENV=development

# Set to 'true' if your dev server uses HTTPS
# This ensures cookies work properly with SSL certificates
USE_HTTPS=false

# Set to 'true' to disable the 10-second time check for bid submission (TESTING ONLY)
# WARNING: Only use this for local testing! Never enable in production!
DISABLE_TIME_CHECK=false

# Set to 'true' to disable rank #1 check (TESTING ONLY)
# This allows bidding to continue even if already rank #1
# Note: 3-bid limit is still enforced - bids will stop after 3 submissions
# WARNING: Only use this for local testing! Never enable in production!
DISABLE_RANK_CHECK=false

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/spotbidding

# Session
SESSION_SECRET=your-secret-key-here-change-in-production

# GoComet API
# This will be set via the UI
GLOBAL_AUTH_TOKEN=

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# WhatsApp Configuration (Optional)
WHATSAPP_API_URL=https://graph.facebook.com/v17.0
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-access-token
